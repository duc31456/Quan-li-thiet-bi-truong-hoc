<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddangky"
    tools:context=".Activity.Activity_baoloithietbi">

    <ListView
        android:id="@+id/listtinhtrang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:text="Mã"
        android:textColor="#9F1010"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="120dp"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:text="Tên thiết bị"
        android:textColor="#B51010"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="120dp"
        android:gravity="center|left"
        android:text="Tình trạng"
        android:textColor="#B51010"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/titletinhtrang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="bottom|center"
        android:text="Tình trạng thiết bị"
        android:textColor="#FFB300"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>