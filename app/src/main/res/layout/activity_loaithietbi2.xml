<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounddangky"
    android:orientation="vertical"
    tools:context=".Activity_loaithietbi">

    <Button
        android:id="@+id/btnadd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:text="Thêm" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:paddingLeft="80dp"
        android:paddingTop="10dp"
        android:text="Loại thiết bị"
        android:textColor="#E91E63"
        android:textSize="24sp"
        android:textStyle="bold" />

    <SearchView
        android:id="@+id/search1"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="100dp"
        android:background="#DEE68C"
        android:iconifiedByDefault="true"
        android:queryHint="Tìm kiếm" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:paddingRight="30dp"
        android:text="Mã"
        android:textColor="#9F1010"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Tên loại thiết bị"
        android:textColor="#B51010"
        android:textSize="20sp" />

</RelativeLayout>