<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    tools:context=".Activity.Activity_thietbi">

    <ListView
        android:id="@+id/listtinhtrang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:gravity="center|left"
        android:text="Mã"
        android:textColor="#9F1010"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="120dp"
        android:gravity="center|left"
        android:text="Tên thiết bị"
        android:textColor="#B51010"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="120dp"
        android:gravity="center|left"
        android:text="Xuất xứ"
        android:textColor="#B51010"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/titlethietbi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:paddingLeft="100dp"
        android:text="Thiết bị"
        android:textColor="#9028AC"
        android:textSize="28sp" />

</RelativeLayout>