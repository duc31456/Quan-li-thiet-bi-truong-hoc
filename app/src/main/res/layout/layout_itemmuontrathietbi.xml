<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/item_matb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Tên thiết bị:"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:textColor="#DC0F0F"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:hint="Số lượng:"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_maphong"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:hint="Mã phòng"
            android:paddingTop="8dp"
            android:textColor="#D81B60"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_nguoimuon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:hint="Người mượn:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/item_sdtnguoimuon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:hint="sdt:"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_edit"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_ngaymuon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:hint="Ngày mượn:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/item_ngaytra"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:hint="Ngày trả:"
                android:textSize="24sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_delete"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </LinearLayout>
</LinearLayout>