<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8">

    <TextView
        android:id="@+id/itemmatb"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"
        android:gravity="center|left"
        android:hint="Mã thiết bị"
        android:textColor="#F44336"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemtentb"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Tên thiết bị"
        android:textColor="#2196F3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemxuatxu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"
        android:gravity="center|left"
        android:hint="Xuất xứ:"
        android:textColor="#67BA3A"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgedit2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/imgdelete2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</LinearLayout>